{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-D",
                "INPUT_NAME=${workspaceFolderBasename}",
                "-D",
                "CMAKE_BUILD_TYPE=Release",
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}\\build",
                "-G",
                "MinGW Makefiles"
            ],
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "configure debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-D",
                "INPUT_NAME=${workspaceFolderBasename}",
                "-D",
                "CMAKE_BUILD_TYPE=Debug",
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}\\build",
                "-G",
                "MinGW Makefiles"
            ],
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build"
            ],
            "problemMatcher": [
                "$go"
            ],
            "dependsOn": [
                "move assets"
            ]
        },
        {
            "label": "test",
            "type": "shell",
            "command": "${workspaceFolder}\\.vscode\\test.cmdÂ²",
            "args": [],
            "dependsOn": [
                "build"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "showReuseMessage": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "",
            "args": [
                "${workspaceFolder}\\build\\${workspaceFolderBasename}.exe"
            ],
            "problemMatcher": [
                "$go"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "build"
            ],
            "group": "build"
        },
		{
			"label": "move assets",
			"type": "shell",
			"windows": {
				"command": "echo robocopy && .vscode\\move_assets.windows.cmd"
			},
			"linux":{
				"command": "rsync"
			}, 
			"problemMatcher": [
				"$go"
			],
        },
		{
			"label": "clean",
			"type": "shell",
			"group": "none",
			"problemMatcher": "$go",
			"windows": {
				// "command": "rd",
				"command": "del",
				"args": [
					"${workspaceFolder}\\build",
					"/f",
					"/s",
					"/q",
					// "-Path",
					// "${workspaceFolder}\\build",
					// "-Force",
					// "-Recurse"
				]
			},
			"linux": {
				"command": "rm",
				"args": [
					"-r",
					"${workspaceFolder}/build"
				]
			}
		},
    ]
}